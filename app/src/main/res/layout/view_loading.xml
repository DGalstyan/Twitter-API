<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/loading_view_progressbar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        />

    <TextView
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:id="@+id/loading_view_message"
        android:text="@string/no_internet_connection_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textIsSelectable="true"
        android:gravity="center" />
    <Button
        android:id="@+id/loading_view_action"
        android:text="@string/action_retry"
        android:textColor="?attr/textColorPrimaryColoredDark"
        style="?attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>